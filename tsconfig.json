{
  "compilerOptions": {
    "outDir": "build",
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": false,
    "resolveJsonModule": true,
    "rootDir": "./",
    "baseUrl": ".",
    "paths": {
      "#*": ["./behavior/*", "./creational/*", "./structural/*"]
    },
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
  },
  "include": ["./behavior/**/*", "./creational/**/*", "./structural/**/*"],
  "exclude": ["node_modules"]
}
